{
  "manifest_version": 2,
  "name": "Take A Moment",
  "description": "React, Chrome, and Redux example",
  "version": "0.0.0.1",
  "icons": { "16": "HeartIcon.png"
  },
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Take A Moment",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
